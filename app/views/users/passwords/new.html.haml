%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t('authentication.forgot_your_password?')
    %p.general-password-text= t('authentication.email_instructions_label')
  %form.general-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      .form-group.mb-25
        = f.input :email, label: false, required: false, placeholder: "#{t('authentication.enter_your_email')}", autofocus: true, id: 'email', class: 'form-control'
      .form-group.mb-20
        = f.button :submit, "#{t('authentication.email_instructions_button')}", class: 'btn btn-default center-block mb-20'
    .text-center
      = link_to t('cancel'), :back, class: 'in-gold-500 mb-20'