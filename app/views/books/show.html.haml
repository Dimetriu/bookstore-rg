= link_to(:back, class: 'general-back-link') do
  %i.fa.fa-long-arrow-left.mr-15
  = t('.back')
.row
  .col-sm-6
    .product-gallery
      .mb-20
        = image_tag(@book.images.first.url, class: 'img-responsive')
      .images.clearfix
        - @book.images[1..-1].collect do |img|
          = link_to(@book_url, class: 'img-link') do
            = image_tag(img.url)
  .col-sm-6
    %h1.mt-res-0= @book.name
    %p.lead.small= book_authors(@book)
    .row
      .col-xs-12.col-md-4
        %p.h1.in-gold-500.mt-10= formatted_price(@book.price)
      .col-xs-5.col-md-3
        .input-group.general-position
          %a.input-link{href: "#"}
            %i.fa.fa-minus.line-height-40
          %input.quantity-input{type: "text"}
          -# Yay need to be fixed!!!
          %a.input-link{href: "#"}
            %i.fa.fa-plus.line-height-40
      .col-xs-7.col-md-5
        %button.btn.btn-default.pull-right.general-position Add to Cart
    .general-info-wrap.divider-lg
      %p Description
      %p.lead.small.line-height-2= @book.description
