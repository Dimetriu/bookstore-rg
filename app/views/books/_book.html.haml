.mb-120
  .row
    .col-xs-6.col-sm-3
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          = image_tag(book.images.first.url, class: 'img-shadow general-thumbnail-img', alt: book.name)
          .thumb-hover
            .general-thumb-link-wrap
              = link_to(book_url(book), class: 'thumb-hover-link') do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
              %a.thumb-hover-link{href: "#"}
                %i.fa.fa-shopping-cart.thumb-icon
      .general-thumb-info
        %p.title= book.name
        %p.font-16.in-gold-500= "eвриков" + "#{book.price}"
        %span.divider-sm
        %p.lead.small= book_authors(book)
