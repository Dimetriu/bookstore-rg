%li
  = link_to t(:home), root_url
%li.dropdown
  = link_to t(:shop), root_url, { class: 'dropdown-toggle', 'data-toggle': 'dropdown', 'role': 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
  %ul.dropdown-menu

  - if user_signed_in?
    %li.dropdown
      = link_to t(:my_account), root_url, { class: 'dropdown-toggle', 'data-toggle': 'dropdown', 'role': 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
      %ul.dropdown-menu
        %li
          = link_to t(:orders), root_url
        %li
          = link_to t(:settings), root_url
        %li.divider{ role: 'separator' }
          %li
            = link_to t(:logout), destroy_user_session_path
  - else
    %li
      = link_to t(:login), new_user_session_path
    %li
      = link_to t(:signup), new_user_registration_path
  %li
    = link_to root_url do
      %span.shop-icon
        -# %span.shop-quantity