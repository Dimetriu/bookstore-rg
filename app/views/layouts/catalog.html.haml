!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8; width=device-width", "http-equiv" => "Content-Type", name: "viewport"}/
    %title Bookstore
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Open+Sans', media: 'all'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    = render 'notifications'
    .wrapper
      = render 'home_header'
      = yield :form_errors
      %main.container
        = render 'catalog_navigation'
        = yield
    = render 'footer'
